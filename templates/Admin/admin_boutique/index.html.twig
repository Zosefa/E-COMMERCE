{% extends 'dashboard/dashboard.html.twig' %}

{% block title %}Boutique{% endblock %}

{% block body %}

<div class="container-fluid py-4">
    <form action='' method="POST" class="input-group mb-5" style="height: 40px !important;">
            <input type="text" class="form-control" placeholder="recherche..." name="recherche" style="height: inherit !important;">
            <button class="btn btn-light" type="submit" name='rech' style="height: inherit !important;">
                <i class="fas fa-search text-dark"></i>
            </button>
        </form>
    <div class="row">
{% for boutique in vendeur %}

        <a class="col-xl-3 col-sm-6 mb-xl-0 mb-4" style="cursor:pointer !important;" href="{{ path('admin_app_admin_boutique_cryptage',{'id':boutique.id}) }}">
            <div class="card">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-12">
                            <div class="numbers">
                                <h4 class="text-sm mb-0 text-uppercase font-weight-bold mb-2 text-center">{{ boutique.Vendeur }}</h4>
                                <p class="font-weight-bolder mb-0">
                                    Produit en vente
                                </p>
                                    <div class="icon icon-shape bg-gradient-primary shadow-primary text-center rounded-circle" style="display:flex;justify-content: center;align-items: center;">
                                        <h4 class="text-lg opacity-10" aria-hidden="true" style="color:white">4</h4>
                                    </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </a>
{% endfor %}
</div>
</div>
{% endblock %}