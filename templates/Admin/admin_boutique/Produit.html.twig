{% extends 'dashboard/dashboard.html.twig' %}

{% block title %}Boutique{% endblock %}

{% block body %}

<div class="container-fluid py-4">
    <h3 class="text-uppercase text-white">Les Produits chez {{ vendeur.Vendeur }}</h3>
    <form action='' method="POST" class="input-group mb-5" style="height: 40px !important;">
            <input type="text" class="form-control" placeholder="recherche..." name="recherche" style="height: inherit !important;">
            <button class="btn btn-light" type="submit" name='rech' style="height: inherit !important;">
                <i class="fas fa-search text-dark"></i>
            </button>
    </form>
    <div class="row">
{% for produits in produit %}

        <a class="col-xl-3 col-sm-6 mb-xl-0 mb-4" style="cursor:pointer !important;">
            <div class="card">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-12">
                            <div class="numbers">
                                <h4 class="text-sm mb-0 text-uppercase font-weight-bold mb-2 text-center">{{ produits.Produit }}</h4>
                                <div style="width:100%;height:100px" class="text-center mb-3">
                                    <img src="{{ vich_uploader_asset(produits, 'ImageFile') }}" class="img-fluid" style="height:inherit !important;">
                                </div>
                                <div class="d-flex justify-content-between mb-0">
                                    <p style="font-size:15px;font-weight:bold;">Prix:</p>
                                    <p style="font-weight:bold;font-size:15px;">{{ produits.Prix }} Ar</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </a>
{% endfor %}
</div>
</div>
{% endblock %}