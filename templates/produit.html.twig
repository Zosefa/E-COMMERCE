<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('produit') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('produit') }} 
            {% block importmap %} {{ importmap('produit') }} {% endblock %} 
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container">
                    <a class="navbar-brand" href="#">
                        <i class="fas fa-user"></i>
                        {{ app.user.userIdentifier }}
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarScroll" aria-controls="navbarScroll" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarScroll">
                    <ul class="navbar-nav m-auto my-2 my-lg-0 navbar-nav-scroll" style="--bs-scroll-height: 100px;">
                        <li class="nav-item">
                            <a class="nav-link {{ app.current_route == 'app_produit_liste' ? 'active' : '' }}" aria-current="page" href="{{ path('app_produit_liste') }}">Produit</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {{ app.current_route starts with 'app_facture' ? 'active' : '' }}" href="{{ path('app_facture_index') }}">Facture</a>
                        </li>
                    </ul>
                    <div><a href="{{ path('app_logout') }}" class="btn btn-danger btn-sm">Logout</a></div>
                    </div>
                </div>
            </nav>
        <div class="container">
            {% block body %}{% endblock %}
        </div>
    </body>
</html>
