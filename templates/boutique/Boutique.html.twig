<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>E-VENTE</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('boutique') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('boutique') }} 
            {% block importmap %} {{ importmap('boutique') }} {% endblock %} 
        {% endblock %}
        <link rel="stylesheet" href="{{ asset('wow/animate.css') }}">
    </head>
    <body>
    {# <div class="wow fadeInDown animated" data-wow-duration="1s" data-wow-delay="300ms" style="visibility: visible; animation-duration: 1s; animation-delay: 300ms; animation-name: fadeInDown;">Coucou</div> #}
    <div class="client">
        <h6><i class="fas fa-user"></i> {{ app.user.userIdentifier }}</h6>    
    </div>
    <div class="section-cart">
        <div class="contenair">
            <h4>E-VENTE</h4>
                <form action="">
                    <input type="text" name="article" class="form-control">
                    <button class="btn btn-primary" type="submit">
                        <i class="fas fa-search"></i>
                    </button>
                </form>
                <div>                   
                    <select class="form-select">
                        <option value="" disabled selected hiiden>PAYS</option>
                        {% for Pays in pays %}
                            <option value="{{ Pays.id }}">{{ Pays.Pays }}</option>
                        {% endfor %}
                    </select>
                    <a href="{{ path('app_cart') }}">
                        <i class="fas fa-shopping-cart"></i>
                    </a>
                </div>             
        </div>
    </div>

    <div class="header">
        
    </div>

    <div class="main">
        <div class="contenair">
            <div class="produit">
                <h4>PRODUIT RECENT</h4>
                <button class="btn btn-primary">VOIR TOUS</button>
            </div>       
            <div class="row">
                {% for produit in produits %}
                    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                        <div class=" card " style="margin:20px 2px;">
                            <img class="card-img-top" src="{{ vich_uploader_asset(produit, 'ImageFile') }}" alt="Card image">
                            <div class="card-body">
                                <h4 class="card-title">{{ produit.Produit }}</h4>
                                <p class="prix">{{ produit.Prix }} Ar</p>
                            </div>
                            <div class="card-footer">
                                <div>
                                    <button class="btn btn-primary view">View</button>
                                    <a href="{{ path('app_cart_add',{id:produit.id}) }}" class="btn btn-warning">Add To Cart</a>
                                </div>
                            </div>
                        </div> 
                    </div>  
                {% endfor %}
            </div>

        </div>
    </div>

    <div class="footer">
        <div class="contenair">
            <div class="Techno">
                <ul>
                    <li>Symfony 7</li>
                    <li>PostgresSQL</li>
                </ul>
            </div>
            <div class="copyright">
                <p>Copyright by ZosefaToky</p>
                <strong>zosephatoky@gmail.com</strong>
                <div>
                    <i class="fab fa-facebook"></i>
                    <i class="fab fa-instagram"></i>
                    <i class="fab fa-whatsapp"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="view-produit">
        <div>
            <i class="far fa-window-close"></i>
        </div>
        <div>

        </div>
    </div>

        <script src="{{ asset('jquery/jquery.min.js') }}"></script>
        <script src="{{ asset('wow/wow.min.js') }}"></script>
        <script src="{{ asset('js/boutique.js') }}"></script>
    </body>
</html>
