{% extends 'produit.html.twig' %}

{% block title %}Facture{% endblock %}

{% block body %}
    <div class="mt-4 mb-2">
        <a href="{{ path('app_facture_index') }}" class="btn btn-primary">COMMANDE NON FACTUREE</a>
        <a href="{{ path('app_facture_facturer') }}" class="btn btn-secondary">COMMANDE FACTUREE</a>
    </div>
    <table class="table table-hover">
        <thead>
            <tr>
                <td>Numero Facture</td>
                <td>Date Facture</td>
                <td>Facture</td>
            </tr>
        </thead>
        <tbody>
            {% for commandes in commande %}
                <tr>
                    <td>{{ commandes.NumeroFacture }}</td>
                    <td>{{ commandes.DateFacture ? commandes.DateFacture|date('d-m-y') }}</td>
                    {# <td>{{ commandes.ModeP }}</td> #}
                    <td>
                        <a href="{{ path('app_facture_generer',{id:commandes.id}) }}" class="btn btn-success btn-sm">GENERER LA FACTURE</a>
                    </td>
                </tr>
            {% else %}
            <tr>
                <td colspan="7">AUCUN COMMANDE EFFECTUER</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
